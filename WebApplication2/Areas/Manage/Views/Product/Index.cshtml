@using WebApplication2.Models;
@model List<Product>
<div class="row justify-content-between align-items-center">
    <h1>Products:</h1>
    <a class="btn btn-primary" asp-action="create" asp-controller="product">Create</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Catagory</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
       
     @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Catagory</td>
                <td>@item.Price</td>
                <td>@item.Image</td>


                <td>
                    <a asp-action="update" asp-controller="product" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    <a asp-action="delete" asp-controller="product" asp-route-id="@item.Id" class="btn btn-primary ">Delete</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>